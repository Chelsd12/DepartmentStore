<h1><%= @item.id ? "Edit Item" : "New Item" %></h1>
<hr />
<%= form_for [@grocery, @item] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, required: true, autofocus: true, placeholder: "Name"%>
    <br />
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br />
    <%= f.label :quantity %>
    <%= f.text_field :quantity %>
    <br />
    <%= f.label :price %>
    <%= f.text_field :price %>
    <br />
    <%= f.submit %>
<% end %>